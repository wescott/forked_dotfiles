[user]
	name = Lars Kappert
	email = lars@webpro.nl

[github]
	user = webpro

[core]
	excludesfile = ~/.config/git/ignore
	editor = code --wait
	filemode = false
	trustctime = false
	autocrlf = input
	untrackedCache = true
	pager = delta
	ignorecase = false

[credential]
	helper = osxkeychain

[pull]
	rebase = true

[rerere]
	enabled = true

[rebase]
	autoStash = true

[init]
	defaultBranch = main

[push]
	default = simple
	followTags = true

[fetch]
	prune = true

[grep]
	lineNumber = true

[help]
	autocorrect = 1

[alias]
	amend = commit --amend --reuse-message=HEAD
	br = branch
	ci = commit
	co = checkout
	contrib = shortlog --summary --numbered
	d = diff
	ds = -c delta.side-by-side=true diff
	home = browse
	g = grep --break --heading --line-number
	p = push
	pf = push --force
	s = status
	unstage = reset --hard HEAD

	l = log --graph --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	ld = "!sh -c \"git log --since '${1:-1} days ago' --oneline --author $(git config user.email)\" -"
	ll = log --graph --abbrev-commit --pretty=oneline
	lm = log --pretty=format:'* %s (%h)'

	patch = !git --no-pager diff --no-color
	show-ignored = !git clean -ndX | perl -pe 's/Would remove //'

[diff]
	renames = copies
	indentHeuristic = true
	colorMoved = default

[difftool]
	prompt = false

[difftool "sourcetree"]
	cmd = code --wait --diff $LOCAL $REMOTE
	path =

[merge]
	conflictstyle = diff3
	defaultToUpstream = true

[mergetool]
	prompt = false

[mergetool "sourcetree"]
	cmd = code --wait $MERGED
	trustExitCode = true

[delta]
	navigate = true
	light = false

[color]
	ui = auto
